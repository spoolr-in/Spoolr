<Window x:Class="SpoolrStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpoolrStation"
        xmlns:views="clr-namespace:SpoolrStation.Views"
        mc:Ignorable="d"
        Title="Spoolr Station - Print Shop Management" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    
    <!-- Main Grid Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header/Navigation -->
            <RowDefinition Height="*" />   <!-- Main Content -->
            <RowDefinition Height="Auto" /> <!-- Status Bar -->
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Logo/Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“„" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center" />
                    <TextBlock Text="SPOOLR STATION" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              VerticalAlignment="Center" />
                </StackPanel>
                
                <!-- Navigation Menu -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <Button Content="Dashboard" 
                           Style="{DynamicResource NavButtonStyle}" 
                           Margin="10,0" 
                           Click="NavigateToDashboard" />
                    <Button Content="Printers" 
                           Style="{DynamicResource NavButtonStyle}" 
                           Margin="10,0" 
                           Click="NavigateToPrinters" />
                    <Button Content="Jobs" 
                           Style="{DynamicResource NavButtonStyle}" 
                           Margin="10,0" 
                           Click="NavigateToJobs" />
                    <Button Content="Settings" 
                           Style="{DynamicResource NavButtonStyle}" 
                           Margin="10,0" 
                           Click="NavigateToSettings" />
                </StackPanel>
                
                <!-- User Info/Login -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Vendor Status -->
                    <StackPanel Orientation="Vertical" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0">
                        <TextBlock Text="{Binding VendorStatusText}" 
                                  Foreground="#BDC3C7" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,2" />
                        <Button Content="{Binding AvailabilityToggleText}" 
                               Background="{Binding IsVendorAvailable, Converter={StaticResource BoolToColorConverter}}" 
                               Foreground="White" 
                               BorderThickness="0" 
                               Padding="10,3" 
                               FontSize="12" 
                               FontWeight="Bold" 
                               Command="{Binding ToggleAvailabilityCommand}" 
                               IsEnabled="{Binding IsLoggedIn}" />
                    </StackPanel>
                    
                    <!-- Login Section -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="{Binding UserStatusText}" 
                                  Foreground="#BDC3C7" 
                                  VerticalAlignment="Center" 
                                  FontSize="12" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,0,0,2" />
                        <Button Content="{Binding LoginButtonText}" 
                               Style="{StaticResource PrimaryButtonStyle}" 
                               Padding="15,5" 
                               Command="{Binding LoginCommand}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Background="#ECF0F1">
            <!-- This will be replaced with proper content based on navigation -->
            <TabControl x:Name="MainTabControl" 
                       Background="Transparent" 
                       BorderThickness="0"
                       TabStripPlacement="Top">
                
                <!-- Dashboard Tab -->
                <TabItem Header="Dashboard" Visibility="Collapsed">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="Dashboard Overview" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,20" />
                        
                        <!-- Dashboard Content -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!-- Statistics Cards Row -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Active Printers Card -->
                                <Border Grid.Column="0" 
                                       Background="White" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="0,0,10,0"
                                       Effect="{DynamicResource CardDropShadow}">
                                    <StackPanel>
                                        <TextBlock Text="Active Printers" 
                                                  FontWeight="Bold" 
                                                  FontSize="14" 
                                                  Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding ActivePrinters}" 
                                                  FontSize="36" 
                                                  FontWeight="Bold" 
                                                  Foreground="#27AE60" 
                                                  Margin="0,10,0,0" />
                                    </StackPanel>
                                </Border>
                                
                                <!-- Pending Jobs Card -->
                                <Border Grid.Column="1" 
                                       Background="White" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="5,0"
                                       Effect="{DynamicResource CardDropShadow}">
                                    <StackPanel>
                                        <TextBlock Text="Pending Jobs" 
                                                  FontWeight="Bold" 
                                                  FontSize="14" 
                                                  Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding PendingJobs}" 
                                                  FontSize="36" 
                                                  FontWeight="Bold" 
                                                  Foreground="#E74C3C" 
                                                  Margin="0,10,0,0" />
                                    </StackPanel>
                                </Border>
                                
                                <!-- Jobs Today Card -->
                                <Border Grid.Column="2" 
                                       Background="White" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="5,0"
                                       Effect="{DynamicResource CardDropShadow}">
                                    <StackPanel>
                                        <TextBlock Text="Jobs Today" 
                                                  FontWeight="Bold" 
                                                  FontSize="14" 
                                                  Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding JobsToday}" 
                                                  FontSize="36" 
                                                  FontWeight="Bold" 
                                                  Foreground="#3498DB" 
                                                  Margin="0,10,0,0" />
                                    </StackPanel>
                                </Border>
                                
                                <!-- Active Job Offers Card -->
                                <Border Grid.Column="3" 
                                       Background="White" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="10,0,0,0"
                                       Effect="{DynamicResource CardDropShadow}">
                                    <StackPanel>
                                        <TextBlock Text="Active Offers" 
                                                  FontWeight="Bold" 
                                                  FontSize="14" 
                                                  Foreground="#7F8C8D" />
                                        <TextBlock Text="{Binding ActiveJobOffers}" 
                                                  FontSize="36" 
                                                  FontWeight="Bold" 
                                                  Foreground="#F39C12" 
                                                  Margin="0,10,0,0" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- WebSocket Status and Recent Offers Row -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- WebSocket Connection Status -->
                                <Border Grid.Column="0" 
                                       Background="White" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="0,0,10,0"
                                       Effect="{DynamicResource CardDropShadow}">
                                    <StackPanel>
                                        <TextBlock Text="Spoolr Core Connection"
                                                  FontWeight="Bold" 
                                                  FontSize="16" 
                                                  Margin="0,0,0,15" />
                                        
                                        <!-- Connection Status -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Ellipse Width="12" Height="12" 
                                                    Fill="{Binding WebSocketIndicatorColor}" 
                                                    Margin="0,0,8,0" 
                                                    VerticalAlignment="Center" />
                                            <TextBlock Text="{Binding ConnectionStatus}" 
                                                      FontWeight="Medium" 
                                                      VerticalAlignment="Center" />
                                        </StackPanel>
                                        
                                        <TextBlock Text="Last Offer:" 
                                                  FontSize="12" 
                                                  Foreground="#7F8C8D" 
                                                  Margin="0,0,0,5" />
                                        <TextBlock Text="{Binding LastJobOfferTimeText}" 
                                                  FontWeight="Medium" />
                                    </StackPanel>
                                </Border>
                                
                                <!-- Recent Job Offers -->
                                <Border Grid.Column="1" 
                                       Background="White" 
                                       CornerRadius="8" 
                                       Padding="20" 
                                       Margin="10,0,0,0"
                                       Effect="{DynamicResource CardDropShadow}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" 
                                                  Text="Recent Job Offers" 
                                                  FontWeight="Bold" 
                                                  FontSize="16" 
                                                  Margin="0,0,0,15" />
                                        
                                        <!-- Job Offers List -->
                                        <ScrollViewer Grid.Row="1" 
                                                     VerticalScrollBarVisibility="Auto" 
                                                     HorizontalScrollBarVisibility="Disabled">
                                            <ItemsControl ItemsSource="{Binding RecentJobOffers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="#F8F9FA" 
                                                               CornerRadius="4" 
                                                               Padding="10" 
                                                               Margin="0,0,0,5">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="Auto" />
                                                                </Grid.ColumnDefinitions>
                                                                
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Summary}" 
                                                                              FontWeight="Medium" 
                                                                              FontSize="12" />
                                                                    <TextBlock Text="{Binding ReceivedTimeText}" 
                                                                              FontSize="10" 
                                                                              Foreground="#7F8C8D" 
                                                                              Margin="0,2,0,0" />
                                                                </StackPanel>
                                                                
                                                                <Border Grid.Column="1" 
                                                                       Background="{Binding StatusColor}" 
                                                                       CornerRadius="10" 
                                                                       Padding="8,2">
                                                                    <TextBlock Text="{Binding Status}" 
                                                                              FontSize="10" 
                                                                              FontWeight="Bold" 
                                                                              Foreground="White" />
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                                
                                                <ItemsControl.Template>
                                                    <ControlTemplate>
                                                        <ScrollViewer VerticalScrollBarVisibility="Disabled" 
                                                                     HorizontalScrollBarVisibility="Disabled">
                                                            <ItemsPresenter />
                                                        </ScrollViewer>
                                                    </ControlTemplate>
                                                </ItemsControl.Template>
                                            </ItemsControl>
                                        </ScrollViewer>
                                        
                                        <!-- Empty State for Job Offers -->
                                        <StackPanel Grid.Row="1" 
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" 
                                                   Visibility="{Binding RecentJobOffers.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                            <TextBlock Text="ðŸ“‹" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5" />
                                            <TextBlock Text="No recent job offers" 
                                                      FontSize="12" 
                                                      Foreground="#7F8C8D" 
                                                      HorizontalAlignment="Center" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                
                <!-- Jobs Tab -->
                <TabItem Header="Jobs" Visibility="Collapsed">
                    <views:JobsQueueView DataContext="{Binding}" />
                </TabItem>
                
                <!-- Printers Tab -->
                <TabItem Header="Printers" Visibility="Collapsed">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" 
                                  Text="Printer Management" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,20" />
                        
                        <StackPanel Grid.Row="1" 
                                   Orientation="Horizontal" 
                                   Margin="0,0,0,20">
                            <Button Content="Scan for Printers" 
                                   Style="{StaticResource SecondaryButtonStyle}" 
                                   Margin="0,0,10,0" 
                                   Click="ScanPrinters_Click" />
                            <Button Content="Send Selected Capabilities" 
                                   Style="{StaticResource PrimaryButtonStyle}" 
                                   Margin="0,0,10,0" 
                                   Click="SendCapabilities_Click" 
                                   Name="SendCapabilitiesButton" />
                        </StackPanel>
                        
                        <!-- Printer List -->
                        <Border Grid.Row="2" 
                               Background="White" 
                               CornerRadius="8" 
                               Padding="20"
                               Effect="{DynamicResource CardDropShadow}">
                            <Grid>
                                <!-- Empty State -->
                                <StackPanel Name="EmptyState" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ–¨ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15" />
                                    <TextBlock Text="No printers found" 
                                              FontSize="18" 
                                              FontWeight="Medium" 
                                              HorizontalAlignment="Center" 
                                              Margin="0,0,0,10" />
                                    <TextBlock Text="Click 'Scan for Printers' to discover available printers" 
                                              FontSize="14" 
                                              Foreground="#7F8C8D" 
                                              HorizontalAlignment="Center" 
                                              TextAlignment="Center" 
                                              TextWrapping="Wrap" 
                                              MaxWidth="400" />
                                </StackPanel>
                                
                                <!-- Printer List -->
                                <ScrollViewer Name="PrinterList" 
                                             VerticalScrollBarVisibility="Auto" 
                                             Visibility="Collapsed">
                                    <!-- This will be populated programmatically -->
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                
                <!-- Welcome Screen (Default) -->
                <TabItem Header="Welcome" IsSelected="True" Visibility="Collapsed">
                    <Grid>
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   MaxWidth="500">
                            <TextBlock Text="Welcome to Spoolr Station" 
                                      FontSize="32" 
                                      FontWeight="Bold" 
                                      HorizontalAlignment="Center" 
                                      Margin="0,0,0,20" />
                            
                            <TextBlock Text="Your professional print shop management solution" 
                                      FontSize="16" 
                                      HorizontalAlignment="Center" 
                                      TextAlignment="Center" 
                                      Foreground="#7F8C8D" 
                                      Margin="0,0,0,30" />
                            
                            <StackPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Center">
                                <Button Content="Get Started" 
                                       Style="{StaticResource PrimaryButtonStyle}" 
                                       Padding="20,10" 
                                       FontSize="16" 
                                       Margin="0,0,10,0" 
                                       Command="{Binding GetStartedCommand}" />
                                <Button Content="Learn More" 
                                       Background="Transparent" 
                                       Foreground="#3498DB" 
                                       BorderBrush="#3498DB" 
                                       BorderThickness="2" 
                                       Padding="20,10" 
                                       FontSize="16" 
                                       Command="{Binding LearnMoreCommand}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#34495E" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="{Binding StatusText}" 
                          Foreground="#BDC3C7" 
                          VerticalAlignment="Center" />
                
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" 
                            Fill="{Binding WebSocketIndicatorColor}" 
                            Margin="0,0,5,0" />
                    <TextBlock Text="{Binding WebSocketStatusText}" 
                              Foreground="#BDC3C7" 
                              FontSize="12" />
                </StackPanel>
                
                <TextBlock Grid.Column="2" 
                          Text="{Binding VersionText}" 
                          Foreground="#7F8C8D" 
                          FontSize="12" 
                          VerticalAlignment="Center" 
                          Margin="20,0,0,0" />
            </Grid>
        </Border>
    </Grid>
</Window>
