<UserControl x:Class="SpoolrStation.Views.PrinterManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        
        <!-- Styles -->
        <Style x:Key="PrinterItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e9ecef"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="Printer Management" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20" />
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   Margin="0,0,0,20">
            <Button Content="Scan for Printers" 
                   Style="{StaticResource SecondaryButtonStyle}" 
                   Margin="0,0,10,0" 
                   Command="{Binding PrintersViewModel.ScanPrintersCommand}" />
            <Button Content="Refresh Status" 
                   Style="{StaticResource SecondaryButtonStyle}" 
                   Margin="0,0,10,0" 
                   Command="{Binding PrintersViewModel.RefreshStatusCommand}"
                   Visibility="{Binding PrintersViewModel.HasPrinters, Converter={StaticResource BoolToVis}}" />
            <Button Content="Select All Online" 
                   Background="#f39c12" 
                   Foreground="White" 
                   BorderThickness="0" 
                   Padding="15,8" 
                   Margin="0,0,10,0" 
                   Click="SelectOnlinePrinters_Click"
                   Visibility="{Binding PrintersViewModel.HasPrinters, Converter={StaticResource BoolToVis}}" />
        </StackPanel>
        
        <!-- Status Information -->
        <Border Grid.Row="2" 
               Background="#ecf0f1" 
               CornerRadius="4" 
               Padding="15" 
               Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding PrintersViewModel.StatusMessage}" 
                              FontWeight="Medium" />
                    <TextBlock Text="{Binding PrintersViewModel.PrintersSummary}" 
                              FontSize="12" 
                              Foreground="#7f8c8d" 
                              Margin="0,2,0,0" 
                              Visibility="{Binding PrintersViewModel.HasPrinters, Converter={StaticResource BoolToVis}}" />
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           Visibility="{Binding PrintersViewModel.HasPrinters, Converter={StaticResource BoolToVis}}">
                    <CheckBox Content="Select All" 
                             IsChecked="{Binding PrintersViewModel.SelectAll}" 
                             Margin="0,0,15,0" />
                    <TextBlock Text="{Binding PrintersViewModel.SelectedPrintersCount}" 
                              FontWeight="Bold" 
                              VerticalAlignment="Center" />
                    <TextBlock Text=" selected" 
                              VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Printer List -->
        <Border Grid.Row="3" 
               Background="White" 
               CornerRadius="8" 
               Padding="0"
               Effect="{DynamicResource CardDropShadow}">
            <Grid>
                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Name="EmptyStatePanel">
                    <TextBlock Text="ðŸ–¨ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15" />
                    <TextBlock Text="No printers scanned yet" 
                              FontSize="18" 
                              FontWeight="Medium" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10" />
                    <TextBlock Text="Click 'Scan for Printers' to discover available printers on this system" 
                              FontSize="14" 
                              Foreground="#7F8C8D" 
                              HorizontalAlignment="Center" 
                              TextAlignment="Center" 
                              TextWrapping="Wrap" 
                              MaxWidth="400" />
                </StackPanel>
                
                <!-- Loading State -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Visibility="{Binding PrintersViewModel.IsScanning, Converter={StaticResource BoolToVis}}">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,15" />
                    <TextBlock Text="Scanning for printers..." 
                              FontSize="16" 
                              HorizontalAlignment="Center" 
                              Foreground="#7F8C8D" />
                </StackPanel>
                
                <!-- Printer List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             Padding="15" 
                             Visibility="{Binding PrintersViewModel.HasPrinters, Converter={StaticResource BoolToVis}}">
                    <ItemsControl ItemsSource="{Binding PrintersViewModel.Printers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource PrinterItemStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}" 
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,15,0" />
                                        
                                        <!-- Status Indicator -->
                                        <Ellipse Grid.Column="1" 
                                                Style="{StaticResource StatusIndicatorStyle}">
                                            <Ellipse.Fill>
                                                <SolidColorBrush>
                                                    <SolidColorBrush.Color>
                                                        <MultiBinding Converter="{StaticResource PrinterStatusToColorConverter}">
                                                            <Binding Path="IsOnline"/>
                                                        </MultiBinding>
                                                    </SolidColorBrush.Color>
                                                </SolidColorBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        
                                        <!-- Printer Info -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="Bold" 
                                                          FontSize="16" />
                                                <TextBlock Text="(Default)" 
                                                          FontSize="12" 
                                                          Foreground="#27ae60" 
                                                          FontWeight="Medium" 
                                                          Margin="8,2,0,0" 
                                                          Visibility="{Binding IsDefault, Converter={StaticResource BoolToVis}}" />
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{Binding StatusText}" 
                                                          FontSize="12" 
                                                          Foreground="#7f8c8d" 
                                                          Margin="0,0,15,0" />
                                                <TextBlock Text="{Binding DriverName}" 
                                                          FontSize="12" 
                                                          Foreground="#7f8c8d" />
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding CapabilitiesSummary}" 
                                                      FontSize="11" 
                                                      Foreground="#95a5a6" />
                                        </StackPanel>
                                        
                                        <!-- Capabilities Sent Indicator -->
                                        <TextBlock Grid.Column="3" 
                                                  Text="âœ“ Sent" 
                                                  FontSize="11" 
                                                  Foreground="#27ae60" 
                                                  FontWeight="Bold" 
                                                  VerticalAlignment="Center" 
                                                  Margin="15,0" 
                                                  Visibility="{Binding IsCapabilitiesSent, Converter={StaticResource BoolToVis}}" />
                                        
                                        <!-- View Details Button -->
                                        <Button Grid.Column="4" 
                                               Content="Details" 
                                               Background="Transparent" 
                                               Foreground="#3498db" 
                                               BorderThickness="0" 
                                               FontSize="12" 
                                               Padding="8,4" 
                                               Command="{Binding DataContext.PrintersViewModel.ViewCapabilitiesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                               CommandParameter="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Send Capabilities Button -->
        <StackPanel Grid.Row="4" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,15,0,0" 
                   Visibility="{Binding PrintersViewModel.HasSelectedPrinters, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="{Binding PrintersViewModel.SelectedPrintersCount}" 
                      VerticalAlignment="Center" 
                      Foreground="#7f8c8d" 
                      Margin="0,0,5,0" />
            <TextBlock Text="printer(s) selected" 
                      VerticalAlignment="Center" 
                      Foreground="#7f8c8d" 
                      Margin="0,0,15,0" />
            <Button Content="Send Selected Capabilities to Backend" 
                   Style="{StaticResource PrimaryButtonStyle}" 
                   Padding="20,10" 
                   FontSize="14" 
                   Command="{Binding PrintersViewModel.SendCapabilitiesCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
