<Window x:Class="SpoolrStation.Views.JobOfferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" 
        Height="650" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f8f9fa"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="CountdownTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
        
        <Style x:Key="UrgencyTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <Style x:Key="JobDetailTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
        
        <Style x:Key="AcceptButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#219A52"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DeclineButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#bdc3c7"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Main Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20">
                
                <!-- Header -->
                <Border Background="#2c3e50" CornerRadius="8,8,0,0" Padding="20,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ–¨ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="New Print Job Offer!" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding UrgencyText}" 
                                  FontSize="12" 
                                  FontWeight="Medium"
                                  HorizontalAlignment="Center"
                                  Foreground="{Binding CountdownBarColor, Converter={StaticResource StringToBrushConverter}}"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Countdown Section -->
                <Border Background="White" 
                        BorderBrush="#2c3e50"
                        BorderThickness="1,0,1,0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="â° TIME REMAINING" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#7f8c8d"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CountdownText}" 
                                   FontSize="36"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{Binding CountdownBarColor, Converter={StaticResource StringToBrushConverter}}"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Progress Bar -->
                        <ProgressBar Value="{Binding CountdownProgress, Mode=OneWay}" 
                                     Height="10" 
                                     Background="#ecf0f1"
                                     BorderThickness="0"
                                     Foreground="{Binding CountdownBarColor, Converter={StaticResource StringToBrushConverter}}" />
                    </StackPanel>
                </Border>
                
                <!-- Job Details -->
                <Border Background="White" 
                        BorderBrush="#2c3e50"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,8,8"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ JOB DETAILS" 
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#7f8c8d"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Customer & File -->
                        <Border Background="#f8f9fa" 
                               CornerRadius="4" 
                               Padding="12,8" 
                               Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸ“„ Document" 
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="#7f8c8d"
                                           Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding JobSummary}" 
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#2c3e50"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Print Specs -->
                        <Border Background="#f8f9fa" 
                               CornerRadius="4" 
                               Padding="12,8" 
                               Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="âš™ï¸ Print Specifications" 
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="#7f8c8d"
                                           Margin="0,0,0,5"/>
                                <TextBlock Name="PrintSpecsText"
                                           FontSize="13"
                                           Foreground="#34495e"
                                           TextWrapping="Wrap">
                                    <TextBlock.Text>
                                        <Binding Path="PrintSpecs" FallbackValue="No print specifications available" TargetNullValue="No print specifications available"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        
                        <!-- Job ID for debugging -->
                        <Border Background="#ecf0f1" 
                               CornerRadius="4" 
                               Padding="12,6" 
                               Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”¢ Job ID: " 
                                          FontSize="11"
                                          FontWeight="Bold"
                                          Foreground="#7f8c8d"/>
                                <TextBlock Text="{Binding JobOffer.JobId}" 
                                          FontSize="11"
                                          Foreground="#34495e"/>
                                <TextBlock Text=" | Tracking: " 
                                          FontSize="11"
                                          FontWeight="Bold"
                                          Foreground="#7f8c8d"
                                          Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding JobOffer.TrackingCode}" 
                                          FontSize="11"
                                          Foreground="#34495e"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Pricing -->
                        <Border Background="#ecf0f1" 
                               CornerRadius="6" 
                               Padding="15,10"
                               Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸ’° EARNINGS" 
                                          FontSize="11"
                                          FontWeight="Bold"
                                          Foreground="#7f8c8d"
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding PriceDisplay}" 
                                          FontSize="14"
                                          FontWeight="Medium"
                                          Foreground="#27AE60"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Action Buttons -->
                <Grid Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Background="#27AE60"
                            CornerRadius="6"
                            Height="50">
                        <Button Content="âœ… ACCEPT JOB"
                                Background="Transparent"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding AcceptJobCommand}"
                                IsEnabled="{Binding CanAcceptJob}"/>
                    </Border>
                    
                    <Border Grid.Column="2"
                            Background="#E74C3C"
                            CornerRadius="6"
                            Height="50">
                        <Button Content="âŒ DECLINE"
                                Background="Transparent"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Bold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding DeclineJobCommand}"
                                IsEnabled="{Binding CanDeclineJob}"/>
                    </Border>
                </Grid>
            
                
                <!-- Status Message (for expired/responded state) -->
                <Border Background="#f39c12" 
                        CornerRadius="6" 
                        Padding="15,10" 
                        Margin="0,10,0,0"
                        Visibility="{Binding IsExpired, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âš ï¸" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="This job offer has expired" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <Border Background="#27AE60" 
                        CornerRadius="6" 
                        Padding="15,10" 
                        Margin="0,10,0,0"
                        Visibility="{Binding HasResponded, Converter={StaticResource BoolToVis}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="âœ…" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Response submitted successfully" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
